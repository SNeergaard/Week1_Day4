<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvFN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="First Name"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/tvLN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Last Name"
        app:layout_constraintTop_toBottomOf="@id/tvFN"/>
    <TextView
        android:id="@+id/tvSA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Street Address"
        app:layout_constraintTop_toBottomOf="@+id/tvLN"/>
    <TextView
        android:id="@+id/tvCity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="City"
        app:layout_constraintTop_toBottomOf="@id/tvSA"/>
    <TextView
        android:id="@+id/tvSt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="State"
        app:layout_constraintTop_toBottomOf="@id/tvCity"/>
    <TextView
        android:id="@+id/tvZip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Zipcode"
        app:layout_constraintTop_toBottomOf="@id/tvSt"/>
    <Button
        android:id="@+id/btnMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="open text fields"
        android:onClick="main_bundle"
        app:layout_constraintTop_toBottomOf="@id/tvZip"
        />

</androidx.constraintlayout.widget.ConstraintLayout>